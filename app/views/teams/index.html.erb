<h1>Teams</h1>

<%= link_to 'Players', players_path, class: "btn btn-sm btn-warning" %> |
<%= link_to 'PlayerRoles', playerroles_path, class: "btn btn-sm btn-warning" %> |
<%= link_to 'Roles', roles_path, class: "btn btn-sm btn-warning" %> |

<p id="notice"><%= notice %></p>

<%= link_to 'New Team', new_team_path, class: "btn btn-sm btn-primary" %> |
<%= link_to 'Back', :back, class: "btn btn-sm btn-secondary" %>

<br><br>

<table class="table table-dark table-striped table-hover table-sm">
  <thead>
    <tr>
      <th>Nº</th>
      <th>ID</th>
      <th>Nome</th>
      <th>Sigla</th>
      <th>Instituição</th>
      <th>Nº Players</th>
      <th colspan="3">Comandos</th>
    </tr>
  </thead>

  <tbody>
    <% j=0 %>
    <% @teams.each do |team| %>
      <% j=j+1 %>
      <tr>
        <td><%= j %></td>
        <td><%= team.id %></td>
        <td><strong><%= team.nome %></strong></td>
        <td><strong><%= team.sigla %></strong></td>
        <td><%= team.instituicao %></td>
        
        <td>
          <% i = 0 %>
          <% team.players.each do |player| %>
            <% i=i+1 %>
          <% end %>
          <%= i %>
        </td>
        
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
