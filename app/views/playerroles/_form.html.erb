<%= form_for(playerrole) do |f| %>
  <% if playerrole.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(playerrole.errors.count, "error") %> prohibited this playerrole from being saved:</h2>

      <ul>
      <% playerrole.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field inline space">
    <%= f.label :player_id %>
    <% player_array = Player.all.map { |player| [player.nickname, player.id] } %>
    <%= f.select(:player_id, options_for_select(player_array, :selected => f.object.player_id)) %>
  </div>

  <div class="field inline space">
    <%= f.label :role_id %>
    <%#= f.select :role_id, [['Topo', 1], ['Jungle', 2], ['Meio', 3], ['Atirador', 4], ['Suporte', 5]] %>
    <% roles_array = Role.all.map { |role| [role.role, role.id] } %>
    <%= f.select(:role_id, options_for_select(roles_array, :selected => f.object.role_id)) %>
  </div>
  
  <br>

  <%= f.submit 'Submit ', :class => 'btn btn-warning btn-block btn-sm' %>
  
<% end %>
