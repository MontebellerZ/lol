<h1>Roles</h1>

<%= link_to 'Players', players_path, class: "btn btn-sm btn-warning" %> |
<%= link_to 'Teams', teams_path, class: "btn btn-sm btn-warning" %> |
<%= link_to 'PlayerRoles', playerroles_path, class: "btn btn-sm btn-warning" %>

<p id="notice"><%= notice %></p>

<%= link_to 'Back', :back, class: "btn btn-sm btn-secondary" %>

<br><br>

<table class="table-dark table-striped table-hover table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Role</th>
      <th>Comandos</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.id %></td>
        <td><%= role.role %></td>
        <td><%= link_to 'Show', role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
