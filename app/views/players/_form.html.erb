      <ul>
      <% player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :sobrenome %>
    <%= f.text_field :sobrenome %>
  </div>

  <div class="field">
    <%= f.label :datanasc %>
    <%= f.date_select :datanasc, :start_year=>Date.today.year - 100 , :end_year=>Date.today.year - 10, :add_month_numbers=>true %>
  </div>

  <div class="field">
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :elo %>
    <%= f.select :elo, ['Unranked', 'Ferro', 'Bronze', 'Prata', 'Ouro', 'Platina', 'Diamante', 'Mestre', 'GrÃ£o-Mestre', 'Desafiante'] %>
    <%= f.select :divisao, [['--', '' ], 1, 2, 3, 4, 5] %>
  </div>

  <div class="field">
    <%= f.label :team_id %>
    <% team_array = Team.all.map { |team| [team.nome, team.id] } %>
    <%= f.select :team_id, (options_for_select(team_array)) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
